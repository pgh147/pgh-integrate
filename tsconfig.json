{
    "compilerOptions": {
        "baseUrl": "./",
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "skipLibCheck": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "lib": [
            "esnext",
            "dom"
        ],
        "paths": {
            "@/*": ["src/*"],
            "@": ["src"],
        }
    },
    "include": ["src/*/*.ts", "src/*.ts", "src/*/*.vue", "src/*.vue", "vue-shim.d.ts", "components/**/**.ts"],
    "exclude": ["node_modules", "dist", "build"]
}